@model (String playerId, List<Message> chat)
@{

}

<ul class="list-group">
    @if(Model.chat != null)
    {
        @foreach(var message in Model.chat)
        {
            <li class="list-group-item">
                @message.BodyMessage
            </li>    
        }    
    }    
</ul>


<form mathod="post" asp-action="SendMessage">
            <div class="form-group">
                <input name="receiverId" value="@Model.playerId" hidden="hidden"/>

                <label for="messageInput">Enter message</label>
                <input id="messageInput" name="body" type="text" class="form-control"  aria-describedby="message" placeholder="Enter message">
                <small id="emailHelp" class="form-text text-muted">You are written to @Model.playerId</small>
            </div>
            
            <button type="submit" class="btn btn-primary mt-3">Send</button>  
</form>
